---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';

import logoSrc from '../assets/images/logo.png';
import '../styles/global.css';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/

const logos = [
  {
    logo: 'typescript-icon-round',
    name: 'Typescript'
  },
  {
    logo: 'react',
    name: 'React'
  },
  {
    logo: 'nextjs-icon',
    name: 'Next.js'
  },
  {
    logo: 'astro-icon',
    name: 'Astro',
  },
  {
    logo: 'tailwindcss-icon',
    name: 'tailwindcss',
  },
  {
    logo: 'nestjs',
    name: 'nestjs',
  },
  {
    logo: 'postgresql',
    name: 'PostgreSQL',
  },
  {
    logo: 'docker-icon',
    name: 'Docker',
  },
  {
    logo: 'aws',
    name: 'AWS'
  }
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>eatarranza.dev</title>
	</head>

	<body class="bg-neutral-900 h-screen">
    <div class="h-full flex flex-col mx-auto max-w-[480px] text-white space-y-6 pt-5 px-4 relative">
      <header>
        <div class="flex justify-between items-center overflow-hidden">
          <div>
            <h1 class="text-3xl font-bold">Ezekiel Tarranza</h1>
            <p class="text-lg text-cyan-400 font-semibold">Frontend Developer</p>
            <div class="flex items-center mt-2 gap-2">
              <a href="https://github.com/kielllll" target="_blank" rel="noopener noreferrer" aria-label="Github"><Icon name="logos:github-octocat" height={20} width={20} title='github' /></a>
              <a href="https://www.linkedin.com/in/ezekiel-tarranza/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn"><Icon name="logos:linkedin-icon" height={20} width={20} title='linkedin' /></a>
            </div>
          </div>

           <Image src={logoSrc} alt="Portfolio logo" height={100} width={100} loading='eager' />
        </div>
      </header>

      <section class="space-y-4">
        <p>
          I build accessible, pixel-perfect digital experiences for the web.
          Passionate about crafting thoughtful interfaces that blend design
          with robust engineering.
        </p>

        <p>
          Currently, I'm a Frontend Developer
          at <a href="https://twoconnect.com.au/" target="_blank" class="text-cyan-400 underline underline-offset-3"><strong>Twoconnect</strong></a>, specializing
          in accessibility and functionality. I contribute to the creation and maintenance of UI
          components that power our plaform, ensuring our products meet web
          accessibility standards and best practices.
        </p>

        <p>
          In the past, I've had the opportunity to develop software accross a variety
          of settings. From <strong class="text-cyan-400">large corporations</strong> to <strong class="text-cyan-400">start-ups</strong> and
          <strong class="text-cyan-400">small digital product solutions</strong>.
        </p>
      </section>

      <section class="space-y-4">
        <h2 class="text-2xl text-white font-semibold">Tech Stack</h2>

        <div class="flex items-center flex-wrap gap-2">
          {logos.map(({logo, name}) => (
            <Icon name={`logos:${logo}`} height={32} width={32} title={name} />
          ))}
        </div>
      </section>

      <section class="space-y-4">
        <h2 class="text-2xl text-white font-semibold">Projects</h2>
        
        <div class="flex flex-col justify-center items-center gap-3">
          <Icon name="tabler:settings-cog" height={52} width={52} />
          <p>Work In Progress</p>
        </div>
      </section>

      <footer class='text-center mt-auto mb-4'>
        Â© 2025 Ezekiel Tarranza
      </footer>
		</div>
	</body>
</html>
